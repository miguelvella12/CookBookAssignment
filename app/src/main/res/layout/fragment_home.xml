<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#EBEDE8E8">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CookBook Home"
            android:textSize="30sp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/peralta"/>

        <Button
            android:id="@+id/button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="135dp"
            android:layout_marginRight="100dp"
            android:layout_marginTop="50dp"
            android:text="View All Recipes"
            android:textColor="@color/white"
            android:background="@drawable/button"/>

        <ImageButton
            android:id="@+id/christmas"
            android:layout_width="300dp"
            android:layout_height="200dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="30dp"
            android:src="@drawable/christmas" />

        <GridLayout
            android:id="@+id/mainRecyclerView"
            android:layout_marginTop="60dp"
            android:layout_width="match_parent"
            android:layout_height="1000dp"
            android:layout_below="@id/button">

            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageButton
                        android:id="@+id/salads"
                        android:layout_width="180dp"
                        android:layout_height="130dp"
                        android:src="@drawable/salad"
                        android:layout_marginLeft="10dp"
                        android:scaleType="fitXY" />

                    <ImageButton
                        android:id="@+id/datenight"
                        android:layout_width="180dp"
                        android:layout_height="130dp"
                        android:layout_marginLeft="30dp"
                        android:src="@drawable/datenight"
                        android:scaleType="fitXY" />
                </LinearLayout>

                <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp">

                    <ImageButton
                        android:id="@+id/breakfast"
                        android:layout_width="180dp"
                        android:layout_height="130dp"
                        android:src="@drawable/breakfast"
                        android:layout_marginLeft="10dp"
                        android:scaleType="fitXY" />

                    <ImageButton
                        android:id="@+id/desserts"
                        android:layout_width="180dp"
                        android:layout_height="130dp"
                        android:layout_marginLeft="30dp"
                        android:src="@drawable/dessert"
                        android:scaleType="fitXY" />
                </LinearLayout>

                <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp">

                    <ImageButton
                        android:id="@+id/breakfast"
                        android:layout_width="180dp"
                        android:layout_height="130dp"
                        android:src="@drawable/breakfast"
                        android:layout_marginLeft="10dp"
                        android:scaleType="fitXY" />

                    <ImageButton
                        android:id="@+id/desserts"
                        android:layout_width="180dp"
                        android:layout_height="130dp"
                        android:layout_marginLeft="30dp"
                        android:src="@drawable/dessert"
                        android:scaleType="fitXY" />
                </LinearLayout>

            </LinearLayout>

        </GridLayout>
    </LinearLayout>

</ScrollView>